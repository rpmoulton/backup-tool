{
  "name": "backup_tool",
  "version": "1.0.0",
  "description": "A Backup Tool. Takes snapshots of directories and stores file contentsand filenames in a database.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "commander": "^14.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/src/**/*.spec.ts",
      "**/test/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": [
    "cli",
    "typescript",
    "starter"
  ],
  "author": "Ryan Moulton",
  "license": "MIT"
}
